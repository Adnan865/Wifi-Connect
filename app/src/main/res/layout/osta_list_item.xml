<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/root_view"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@android:color/transparent"
            app:cardCornerRadius="6.7dp"
            app:cardElevation="0.5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_large">

                <com.an.customfontview.CustomTextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_large"
                    android:gravity="center_horizontal"
                    android:textColor="@color/acitivity_onboarding_info"
                    android:textSize="@dimen/font_small"
                    app:textFontPath="fonts/montserrat_regular.otf" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin"
                        android:id="@+id/item_currency"
                        android:layout_toLeftOf="@+id/item_amount"
                        android:text="â‚¹"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_xxsmall"
                        app:textFontPath="fonts/indian_rupee_regular.ttf" />


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/item_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_medium"
                        app:textFontPath="fonts/montserrat_bold.otf" />

                </RelativeLayout>


                <com.an.customfontview.CustomTextView
                    android:id="@+id/item_expiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:gravity="center_horizontal"
                    android:maxEms="7"
                    android:textColor="@color/acitivity_onboarding_info"
                    android:textSize="@dimen/font_xxsmall"
                    app:textFontPath="fonts/montserrat_regular.otf" />


                <com.an.customfontview.CustomTextView
                    android:id="@+id/item_expiry_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/process_osta_expiry_txt"
                    android:gravity="center_horizontal"
                    android:textColor="@color/color_osta_expired"
                    android:textSize="@dimen/font_xxsmall"
                    app:textFontPath="fonts/montserrat_regular.otf" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <com.wifi.server.views.CircleCheckBox
        android:layout_alignTop="@+id/container"
        android:id="@+id/radio_btn"
        android:layout_width="47.3dp"
        android:layout_height="47.3dp"
        app:borderThickness="1dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-13dp"
        android:paddingLeft="@dimen/margin_large"
        app:circleBorderColor="@color/bg_osta_list_selected"
        app:innerCircleColor="@color/bg_osta_list_selected"
        app:innerCircleRadius="@dimen/margin"
        app:showOuterCircle="false"
        app:textLeftPadding="0dp"
        app:tickColor="@android:color/white"
        app:tickThickness="1dp"
        app:text="@null" />


</RelativeLayout>